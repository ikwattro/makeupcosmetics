{% extends 'StoreFrontBundle:Default:layout.html.twig' %}

{% trans_default_domain 'Interface' %}

{% block content -%}

    {{ form_errors(form) }}

    <h1>{{ 'contact.title'|trans|capitalize }}</h1>

    <form role="form" method="POST" action="{{ path('contact_create') }}">
        <div class="form-group">
            <label for="store_contactbundle_message_name">{{ 'contact.name'|trans|capitalize }}</label>
            <input type="text" class="form-control" id="store_contactbundle_message_name" name="store_contactbundle_message[name]">
        </div>
        <div class="form-group">
            <label for="store_contactbundle_message_email">{{ 'contact.email'|trans|capitalize }}</label>
            <input type="email" class="form-control" id="store_contactbundle_message_email" name="store_contactbundle_message[email]">
        </div>
        <div class="form-group">
            <label for="store_contactbundle_message_message">{{ 'contact.message'|trans|capitalize }}</label>
            <textarea class="form-control" id="store_contactbundle_message_message" name="store_contactbundle_message[message]" rows="10">
                </textarea>
        </div>
        {{ form_row(form._token) }}
        <button type="submit" class="btn btn-default">{{ 'contact.submit'|trans|capitalize }}</button>
    </form>

</ul>
{% endblock %}
