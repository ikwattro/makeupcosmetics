<li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">LANGUE ({{ app.request.locale|truncate(2, false, '') }})<b class="caret"></b></a>
        <ul class="dropdown-menu langMenu">

            {% for locale in locales %}
                <li class="{% if current_locale == locale.locale %} locale_current{% endif %}">
                    <a href="{{ locale.link }}" title="{{ locale.locale_target_language }}">{{ locale.locale_target_language|capitalize }}</a>
                </li>
            {% endfor %}
