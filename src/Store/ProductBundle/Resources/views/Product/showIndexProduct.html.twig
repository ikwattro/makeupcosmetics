<div class="col-md-3 col-lg-3 col-xs-12 product_mini_fiche">
    <div class="mini_fiche_holder">

    <div class="mini_fiche_holder_img">
        <a href="{{ path('product_front_show', {'id': product.masterVariant.id, 'slug': product.slug }) }}">
            <img class="img-responsive" src="{{ asset('uploads/documents/' ~ product.path) | imagine_filter('frontlist_thumb')}}" />
        </a>
    </div>

    <div class="mini_fiche_holder_name">
        <p><a href="{{ path('product_front_show', {'id': product.masterVariant.id, 'slug': product.slug}) }}">{{ product.name }}</a></p>
    </div>
    <div class="mini_fiche_holder_price">
        <p>
            {% if product.masterVariant.isPromo is not empty %}
                <span class="price-striped">{{ product.masterVariant.price }}&euro;</span>&nbsp;&nbsp;
            <span class="price-promo">{{ product.masterVariant.promoPrice }}&euro;</span>
            {% else %}
            {{ product.masterVariant.price }}&euro;
            {% endif %}
        </p>
    </div>

        </div>

</div>

