<div class="col-md-3 col-lg-3 col-xs-12 product_mini_fiche">

    <div class="mini_fiche_holder">
{% if new is defined and new == true %}
    <div class="tagholder">
    <div>
    <strong>#new</strong>
    </div>
</div>
{% endif %}

        <div itemscope itemtype="http://schema.org/Product" class="mini_fiche_holder_name">
            <a href="{{ path('product_front_show', {'id': product.masterVariant.id, 'slug': product.masterVariant.vslug}) }}"
                    title="{{ product.name }}"><span itemprop="name">{{ product.name }}</span></a>
        </div>

    <div class="mini_fiche_holder_img">
        <a href="{{ path('product_front_show', {'id': product.masterVariant.id, 'slug': product.masterVariant.vslug }) }}">
            <img itemprop="image" class="img-responsive" src="{{ asset('uploads/documents/' ~ product.path) | imagine_filter('frontlist_thumb_new')}}"
                    alt="{{ product.name }}"/>
        </a>
    </div>


    <div itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="mini_fiche_holder_price">
    
        <p>
            {% if product.masterVariant.isPromo is not empty %}
                <span class="price-striped">{{ product.masterVariant.promoPrice }}&euro;</span>&nbsp;&nbsp;
            <span class="price-promo" itemprop="price">{{ product.masterVariant.price }}&euro;</span>
                {% elseif promo is not empty %}
                    {% set pricex = product.masterVariant.price %}
                    {% set disc = promo.discount %}
                    {% set pricey = pricex/100 %}
                    {% set dis = pricey*disc %}
                    {% set pricez = pricex - dis %}
                    <span class="price-striped">{{ product.masterVariant.price }}&euro;</span>&nbsp;&nbsp;
                    <span class="price-promo" itemprop="price">{{ pricez|round(2, 'ceil') }}&euro;</span>


            {% else %}
            <span itemprop="price">{{ product.masterVariant.price }}&euro;</span>
            {% endif %}
        </p>
    </div>

        </div>

</div>

