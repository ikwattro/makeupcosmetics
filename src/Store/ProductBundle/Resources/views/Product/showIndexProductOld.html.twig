<div class="col-4 col-sm-4 col-lg-3 frontproduct">
    <h4>{{ product.name }}</h4>
    <div><img src="{{ asset('uploads/documents/' ~ product.path) | imagine_filter('my_thumb')}}" /></div>
    <p>{{ product.description }}</p>
    <p>{{ product.price }}&euro;</p>
    <p><a class="btn btn-primary btn-small" href="{{ path('add_item_to_cart', {'productId': product.masterVariant.id }) }}">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            Add to cart</a></p>
</div>