{% extends '::base.html.twig' %}

{% block body -%}
    <h2>Promotions</h2>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Ristourne (%)</th>
                <th>Désactivée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.discount }}%</td>
                <td>{{ entity.disabled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('promotion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('promotion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Promotions archivées</h2>
    <table class="records_list table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Début</th>
            <th>Fin</th>
            <th>Ristourne (%)</th>
            <th>Désactivée</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in archived %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.start %}{{ entity.start|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.discount }}%</td>
                <td>{{ entity.disabled }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('promotion_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('promotion_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('promotion_new') }}">
                Créer une nouvelle promotion
            </a>
        </li>
    </ul>
    {% endblock %}
