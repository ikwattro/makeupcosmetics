<form action="{{ path('update_variant', {'id': variant.id}) }}" id="form_variant" method="post" role="form">
    <h2>Edition Variante</h2>
    <h4>Choisissez les options de cette variante</h4>
    {% for opt in options %}
        <div class="form-group">
            <label for="{{ opt.name }}">{{ opt.name }}</label>
            <select name="variant_for_product[option][{{ opt.id }}]">
                {% for value in opt.values %}
                    <option value="{{ value.id }}">{{ value.name }}</option>
                {% endfor %}
            </select>
        </div>
    {% endfor %}
    <div class="form-group">
        <label for="price_field">Prix : </label>
        <input type="number" id="price_field" value="{{ price }}" name="variant_for_product[price]"/>
    </div>
    <div class="form-group">
        <input type="checkbox" name="variant_for_product[out_of_stock]" value="1"
                {% if out_of_stock is not empty %}
                    checked="checked"
                {% endif %}
                /> Out Of Stock ?
    </div>

    <div class="form-group">
        <input type="submit" value="Sauver"/>
    </div>


</form>